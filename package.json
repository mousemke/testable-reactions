{
  "name": "testable-reactions",
  "description": "A fully testable react/webpack project boilerplate",
  "private": true,
  "main": "src/index.js",
  "version": "0.1.3",
  "engines": {
    "node": ">=7.3.0"
  },
  "scripts": {
    "build": "npm run copyAssets && ./node_modules/.bin/webpack",
    "copyAssets": "mkdir -p dist; cp ./index.html ./dist/index.html",
    "precommit": "echo hello",
    "prettier": "prettier --parser flow --single-quote --trailing-comma es5 --write \"src/**/*.jsx\" \"src/**/*.js\" \"test/**/*.js\"",
    "serve": "npm run copyAssets && NODE_ENV=dev webpack-dev-server --devtool eval --progress --colors --hot --content-base dist --port 4080 --host 0.0.0.0 --history-api-fallback",
    "start": "npm run serve",
    "test": "npm run test:lint && npm run test:style && npm run test:visual:cli && npm run test:unit:coverage",
    "test:lint": "eslint ./src ./test --ext .jsx --ext .js",
    "test:lint:fix": "eslint ./src ./test --ext .jsx --ext .js --fix",
    "test:style": "node_modules/.bin/stylelint './src/**/*.css'",
    "test:style:fix": "node_modules/.bin/stylelint './src/**/*.css' --fix",
    "test:type": "flow",
    "test:unit": "babel-node node_modules/.bin/_mocha ./test/unit/**/*.spec.js -r ignore-styles -r ./test/unit/test-setup -R nyan",
    "test:unit:coverage": "babel-node node_modules/.bin/babel-istanbul cover _mocha -- --reporter spec --require ignore-styles --require ./test/test-setup",
    "test:visual": "npm run test:visual:cli && npm run test:visual:report",
    "test:visual:baseline": "cd node_modules/backstopjs/ && npm run reference",
    "test:visual:clean": "cd node_modules/backstopjs/ && rm -rf bitmaps_test",
    "test:visual:cli": "npm run test:visual:clean && cd node_modules/backstopjs/ && npm test",
    "test:visual:report": "cd node_modules/backstopjs/ && npm run openReport"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-istanbul": "0.12.2",
    "babel-loader": "6.2.4",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-webpack-alias": "2.1.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "babel-register": "6.26.0",
    "babel-runtime": "6.26.0",
    "backstopjs": "3.0.31",
    "co-mocha": "1.2.1",
    "css-loader": "0.28.7",
    "enzyme": "3.1.0",
    "enzyme-adapter-react-16": "1.0.2",
    "eslint": "4.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-prettier": "2.3.1",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.1",
    "flow-bin": "0.57.3",
    "git-pre-commit": "2.1.3",
    "ignore-styles": "5.0.1",
    "istanbul-coveralls": "1.0.3",
    "jsdom": "11.3.0",
    "json-loader": "0.5.7",
    "mocha": "4.0.1",
    "mocha-istanbul": "0.3.0",
    "mocha-jsdom": "1.1.0",
    "niffy": "0.2.0",
    "nightmare": "2.10.0",
    "prettier": "1.7.4",
    "promise-polyfill": "6.0.2",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-router-dom": "4.2.2",
    "sinon": "4.0.1",
    "style-loader": "0.19.0",
    "stylelint": "8.2.0",
    "stylelint-no-browser-hacks": "1.1.0",
    "stylelint-order": "0.7.0",
    "stylelint-suitcss": "1.0.0",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.14.1",
    "webpack-shell-plugin": "0.4.2"
  }
}
