{
  "name": "testable-reactions",
  "description": "A fully testable react/webpack project boilerplate",
  "private": true,
  "main": "src/index.js",
  "version": "0.1.5",
  "engines": {
    "node": ">=7.3.0"
  },
  "scripts": {
    "build": "PRODUCTION=true ./node_modules/.bin/webpack",
    "precommit": "npm run prettier && npm run test:lint:fix && npm run test:style:fix && npm run test:unit && npm run test:type",
    "prettier": "prettier --parser flow --single-quote --trailing-comma es5 --write \"src/**/*.jsx\" \"src/**/*.js\" \"test/**/*.js\" && git add .",
    "postinstall": "npm run test:visual:baseline",
    "serve": "NODE_ENV=dev webpack-dev-server --devtool eval --progress --colors --hot --content-base dist --port 4080 --host 0.0.0.0 --history-api-fallback",
    "start": "npm run serve",
    "test": "npm run test:lint && npm run test:style && npm run test:visual && npm run test:unit:coverage && test:visual",
    "test:lint": "eslint ./src ./test --ext .jsx --ext .js",
    "test:lint:fix": "eslint ./src ./test --ext .jsx --ext .js --fix",
    "test:style": "node_modules/.bin/stylelint './src/**/*.css'",
    "test:style:fix": "node_modules/.bin/stylelint './src/**/*.css' --fix",
    "test:type": "flow",
    "test:unit": "babel-node node_modules/.bin/_mocha ./test/unit/**/*.spec.js -r ignore-styles -r ./test/unit/test-setup -R nyan",
    "test:unit:coverage": "npm run test:unit:coverage:cli && npm run test:unit:coverage:report",
    "test:unit:coverage:cli": "NODE_ENV=development babel-node node_modules/.bin/babel-istanbul cover _mocha -- \"test/unit/**/*.spec.js\" -R spec -r ignore-styles -r ./test/unit/test-setup",
    "test:unit:coverage:report": "open coverage/lcov-report/index.html",
    "test:visual": "babel-node node_modules/.bin/_mocha ./test/visual/index.js --slow 10s --timeout 200s --require co-mocha",
    "test:visual:clean": "rm -rf ./niffy && npm run test:visual:baseline",
    "test:visual:debug": "DEBUG=nightmare SHOW=show npm run test:visual",
    "test:visual:baseline": "npm run build && mkdir -p  niffy/.baseline && cp -r ./dist/* ./niffy/.baseline && echo niffy baseline set"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "7.1.6",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-istanbul": "0.12.2",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "babel-register": "6.26.0",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "clean-webpack-plugin": "0.1.17",
    "co-mocha": "1.2.1",
    "css-loader": "0.28.7",
    "css-modules-require-hook": "4.2.2",
    "enzyme": "3.1.0",
    "enzyme-adapter-react-16": "1.0.2",
    "eslint": "4.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-prettier": "2.3.1",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.1",
    "file-loader": "1.1.5",
    "flow-bin": "0.57.3",
    "git-pre-commit": "2.1.3",
    "html-webpack-plugin": "2.30.1",
    "ignore-styles": "5.0.1",
    "is-port-available": "0.1.4",
    "istanbul-coveralls": "1.0.3",
    "jsdom": "11.3.0",
    "json-loader": "0.5.7",
    "mocha": "4.0.1",
    "mocha-istanbul": "0.3.0",
    "mocha-jsdom": "1.1.0",
    "niffy": "git://github.com/mousemke/niffy.git#master",
    "nightmare": "2.10.0",
    "object-assign": "4.1.1",
    "postcss": "6.0.14",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "pre-push": "0.1.1",
    "prettier": "1.7.4",
    "promise": "8.0.1",
    "promise-polyfill": "6.0.2",
    "raf": "3.4.0",
    "react": "16.0.0",
    "react-dev-utils": "4.2.1",
    "react-dom": "16.0.0",
    "react-hot-loader": "3.1.1",
    "react-router-dom": "4.2.2",
    "sinon": "4.0.1",
    "spa-http-server": "0.9.0",
    "style-loader": "0.19.0",
    "stylelint": "8.2.0",
    "stylelint-no-browser-hacks": "1.1.0",
    "stylelint-order": "0.7.0",
    "stylelint-suitcss": "1.0.0",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.3",
    "whatwg-fetch": "2.0.3"
  },
  "prepush": [
    "test:lint",
    "test:style",
    "test:unit",
    "test:type",
    "test:visual"
  ]
}
